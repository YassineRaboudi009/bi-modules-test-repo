services:
	errorFormatter.tableWithoutLinks:
		class: BettIngenieure\Tester\PhpstanTableWithoutLinksErrorFormatter
		arguments:
			simpleRelativePathHelper: @simpleRelativePathHelper
			showTipsOfTheDay: %tipsOfTheDay%
			editorUrl: %editorUrl%
			editorUrlTitle: %editorUrlTitle%

parameters:
	level: 5 # Level 5 is needed to validate if a string is given to a parameter declared as \Closure
	tmpDir: temp/phpstan/default
	ignoreErrors:
		- '/^Deprecated in PHP 8.0: Required parameter .* follows optional parameter .*\.$/'
		- '/^Unreachable statement - code above always terminates.$/'
	errorFormat: tableWithoutLinks
	editorUrl: '%%file%%:%%line%%'
	treatPhpDocTypesAsCertain: false